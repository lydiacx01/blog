@import "../functions.styl"

headHeight = 30px
mapHeight = 350px
zI = 2
body
	width 100%
	height 100%
	margin 0
	padding 0
	font-family sans-serif
	.head-wrap
		width 100%
		height headHeight
		background-color burlywood
		text-align left
		#home
			line-height 30px
			font-size 14px
			padding 8px 15px
	form
		width 100%
		font-size 14px
		.form-group
			div
				margin 0 10px
				input
				select
					margin-bottom 10px
		.detail-wrap
			self-pos-absolute top headHeight left
			width 100%
			z-index zI
			background-color #f5f8fa
			padding 15px 8px
			h3
				margin-left 13px
				margin-bottom 20px
			#title-change
				padding 5px 8px
				display block
				width 150px
				text-align center
				margin 20px 0
				&:hover
					background-color #cccd89
			.brand-group
			.competition-group
				white-space pre-line
		.map-wrap
			width 100%
			height mapHeight
			z-index zI - 1
			#marker
				self-pos-relative top 50% left 50%
				z-index zI
				width 26px
				height 36px
				margin-top -28px
				margin-left -12px
				span
					width 8px
					height 8px
					self-pos-absolute bottom -4px left 50%
					margin-left -4px
					background-image url("../../img/plus.png")
					background-repeat no-repeat
					background-size 8px 8px
				img
					width 26px
					height 36px
			#map
				height 100%
		.current
			width 100%
			margin-top 40px
			padding 0 15px
			label
				color #00BCD4
			p
				line-height
		.location-group
			padding 5px 10px
			.hint
				color red
		.location-wrap
			margin-bottom 30px
			padding 10px 15px
			background-color white
			.location-control
				span
					margin-right 10px
					padding 3px 5px
					&:hover
						background-color #a7ba77
			.location-desc
				overflow hidden
				word-wrap break-word
				margin-top 8px
				padding  8px 3px 3px 3px
		.repeat-form
			width 100%
			padding 10px
			z-index zI - 1
			background-color white
			.repeat-desc
				font-size 14px
				color red
			.repeat-button-wrap
				text-align center
				button
					margin 0 10px 40px 0
		.init-wrap
			width 100%
			margin-bottom 30px
			padding 0 8px
			.error
				width 100%
				padding 10px 15px
				text-align center
				background-color blanchedalmond
				p
					color red
			.repeat-group
				.repeat-wrap
					margin 5px auto
					#repeat-start
						margin-bottom 10px
					.repeat-result
						.repeat-hint
							color red
						.repeat-total
							span
								font bold 14px
								color red
		.button-wrap
			text-align center
			button
				margin-right 15px

