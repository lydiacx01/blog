@import "../functions.styl"
body
	width 100%
	margin 0
	padding 0
	background-color white
	.header
		padding  15px 0
		button
			margin-right 15px
		.normal
			margin: 0 auto 10px auto
			text-align center
			.area-wrap
				display inline-block
				margin-right 10px
				.select-wrap
					width 250px
					padding 0 5px
					display inline-block
					select
						width 100%
		.edit-wrap
			margin: 0 auto 10px auto
			text-align center
			.radius-block
				display inline-block
				label
					width 150px
					padding 0
				div
					width 350px
					padding 0
	#map_container
		width 100%
		height 400px
		margin-bottom 30px
		background-color #9E9E9E
@media screen and (min-device-width: 760px)
	.header
		.edit-wrap
			.radius-block
				width 520px
				margin-bottom 0
			button
				margin-top -30px
@media screen and (max-device-width: 420px)
	.header
		.edit-wrap
			text-align left
			.radius-block
				width 250px
				.col-sm-6
					width 100%
